<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Acquaint.XForms.SetupPage" Title="Setup">
	<ContentPage.Content>
		<StackLayout VerticalOptions="FillAndExpand" Margin="10">
			<Entry x:Name="DataPartitionPhraseEntry" Placeholder="Enter a unique phrase" Keyboard="Text">
				<Label.FontSize>
					<OnPlatform x:TypeArguments="Font" iOS="Micro" />
				</Label.FontSize>
			</Entry>
			<Button Text="Continue" Command="{Binding ContinueCommand}" />
			<Label LineBreakMode="WordWrap" Text="The phrase is a key that will separate your data from everyone else's data. Make it unique.">
				<Label.FontSize>
					<OnPlatform x:TypeArguments="Font" iOS="Micro" />
				</Label.FontSize>
			</Label>
			<Label LineBreakMode="WordWrap" Text="Enter this same phrase on any device running Acquaint that you'd like to sync data with.">
				<Label.FontSize>
					<OnPlatform x:TypeArguments="Font" iOS="Micro" />
				</Label.FontSize>
			</Label>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>